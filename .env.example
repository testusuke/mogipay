# MogiPay Production Environment Variables
# Copy this file to .env and fill in the actual values
# DO NOT commit .env file to version control

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_DB=mogipay_prod
POSTGRES_USER=mogipay_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# ============================================
# Backend Configuration
# ============================================
# PostgreSQL connection URL
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
# Note: Use 'postgres' as hostname (Docker service name)
DATABASE_URL=postgresql://mogipay_user:CHANGE_THIS_TO_SECURE_PASSWORD@postgres:5432/mogipay_prod

# Application environment (production/staging/development)
ENVIRONMENT=production

# Debug mode - should be False in production
DEBUG=False

# ============================================
# Frontend Configuration
# ============================================
# Backend API URL (internal Docker network)
# Note: Use 'backend' as hostname (Docker service name)
NEXT_PUBLIC_API_URL=http://backend:8000

# ============================================
# Cloudflare Tunnel Configuration
# ============================================
# Cloudflare Tunnel Token
# Get this from Cloudflare Zero Trust Dashboard
# https://one.dash.cloudflare.com/
TUNNEL_TOKEN=YOUR_CLOUDFLARE_TUNNEL_TOKEN_HERE

# ============================================
# Security Notes
# ============================================
# 1. Change POSTGRES_PASSWORD to a strong, unique password
# 2. Ensure the same password is used in DATABASE_URL
# 3. Get TUNNEL_TOKEN from Cloudflare Zero Trust Dashboard
# 4. Never commit the .env file to version control
# 5. Keep this file secure and restrict access
